XF86Audio{LowerVolume,RaiseVolume,Mute}
    volume {-,+,x} | notify audio 

XF86MonBrightness{Up,Down}
    xbacklight {+,-}2 && xbacklight -get | notify backlight

super + semicolon
    $TERM

super + b
    $BROWSER

super + l
    betterlockscreen -l

super + d
    $TERM --class fzf-run -e fzf-run

# dwm
super + {k,j}
    dwmc focusstack {-,+}1

super + shift + {k,j}
    dwmc {pushup,pushdown}

super + shift + {h,l}
    dwmc setmfact {-,+}0.05

super + shift + b
    dwmc togglebar

super + shift + space
    dwmc togglefloating

super + shift + q
    dwmc killclient

super + shift + {e,r}
    dwmc quit {0,1}

super + {t,f,m,u}
    dwmc setlayoutex {0,1,2,3}

super + shift + {1-9}
    dwmc tagex {0-8}

super + ctrl + {1-9}
    dwmc viewex {0-8}

super + Tab
    dwmc viewlast

super + {1-9}
    dwmc toggleviewex {0-8}

super + ctrl + shift + {1-9}
    dwmc toggletagex {0-8}

super + 0
    dwmc viewall

super + shift + 0
    dwmc tagall

super + {s,p}
    dwmc togglescratch {0,1}

super + {comma,period}
    dwmc focusmon {-1,1}

super + shift + {comma,period}
    dwmc tagmon {-1,1}

super + shift + Return
    dwmc zoom

super + shift + o
    xrandr --output HDMI-2 --auto --off

super + o
    xrandr --output HDMI-2 --auto --right-of eDP-1
