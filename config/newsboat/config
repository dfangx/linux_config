auto-reload yes
browser firefox
feed-sort-order none
reload-time 20
max-items 500

bind-key k prev
bind-key j next
bind-key j down article
bind-key k up article
bind-key h prev-feed
bind-key l next-feed
bind-key o open-in-browser-and-mark-read
bind-key O open-in-browser

unbind-key ;

macro o set browser "mpv --x11-netwm=yes -fs %u" ; open-in-browser-and-mark-read ; set browser firefox

color background          default   default
color listnormal          white   default
color listfocus           blue  black   bold
color listnormal_unread   white default
color listfocus_unread    blue black   bold
color info                magenta  black   bold
color article             default   default
