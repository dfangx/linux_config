#!/bin/bash

dir=/tmp/build
special=st
special_dir=~/.config/st

echo Checking for build directory...
if [ ! -d $dir ]; then
	echo No build directory found. Creating build directory "$dir"...
	mkdir -v $dir 
else
	echo Build directory exists.
fi

echo Fetching updates...
auracle -C "$dir" clone $(auracle sync | cut -d" " -f1)

if [ $(ls $dir | wc -l) -gt 0 ]; then
	for f in $dir/*; do
		echo Creating package "$f"
		cd $f
        if [ "$(basename $f)" == "$special" ]; then
            echo "Copying configuration files..."
            cp "$special_dir"/config.h "$special_dir"/PKGBUILD -t .
            makepkg -si --skipchecksums
        else
		    makepkg -si
        fi
	done
else
	echo "No AUR packages"
fi

echo Cleaning up...
echo y | rm -rv $dir

exec pkill -RTMIN+4 i3blocks
