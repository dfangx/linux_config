#!/bin/sh
toplevel="/home/$USER/documents/kvm"
vm=$1
shift
opt="$@"

case "$vm" in 
    "win10")
        exec qemu-system-x86_64 -enable-kvm \
                -cpu host,hv_relaxed,hv_spinlocks=0x1fff,hv_vapic,hv_time \
                -smp 2 \
                -drive file=$toplevel/windows10/win10-vm.img,if=virtio,cache=none,aio=native \
                -net nic -net user,hostname=windowsvm \
                -m 4096 \
                -soundhw hda \
                -monitor stdio \
                -name "Windows" \
                "$@"
        ;;
    "lfs")
        exec qemu-system-x86_64 -enable-kvm \
                -cpu host \
                -smp 2 \
                -drive file="$toplevel"/lfs/lfs-vm.img,if=virtio \
                -net nic -net user,hostname=lfs-vm \
                -m 4096 \
                -monitor stdio \
                -name "LFS VM" \
                $@
        ;;
    "artix")
        exec qemu-system-x86_64 -enable-kvm \
                -cpu host \
                -smp 2 \
                -drive file="$toplevel"/artix/artix-vm.img,if=virtio \
                -m 4096 \
                -monitor stdio \
                -name "Artix VM" \
                $@
        ;;
    *)
        ;;
esac
