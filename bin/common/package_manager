#!/bin/bash

if [ -f "/usr/lib/os-release" ]
then
    os="$(cat /usr/lib/os-release | grep "^ID" | cut -d "=" -f2)"
else
    os="$(cat /etc/os-release | grep "^ID" | cut -d "=" -f2)"
fi
action=$1

if [ -z "$action" ]
then
    echo "No commmand given. Aborting"
    exit 1
fi

case "$action" in
    "install")
        pkgname=$2

        if [ -z "$pkgname" ]
        then
            echo "Package name must be provided to install package"
            exit 1
        fi

        case "$os" in
            "gentoo")
                sudo emerge -a "$pkgname"
                ;;
            "arch" | "artix")
                sudo pacman -S "$pkgname"
                ;;
            *)
        esac
        ;;
    "clean")
        case "$os" in
            "gentoo")
                sudo emerge -ca
                ;;
            "arch" | "artix")
                sudo pacman -Rns $(pacman -Qtdq)
                ;;
            *)
        esac
        ;;
    "remove")
        pkgname=$2

        if [ -z "$pkgname" ]
        then
            echo "Package name must be provided to install package"
            exit 1
        fi

        case "$os" in
            "gentoo")
                sudo emerge -Cav "$pkgname"
                ;;
            "arch" | "artix")
                sudo pacman -Rns "$pkgname"
                ;;
            *)
        esac
        ;;
    "update")
        case "$os" in
            "gentoo")
                sudo emerge -quaDU --keep-going --with-bdeps=y @world
                ;;
            "arch" | "artix")
                sudo pacman -Syu
                ;;
            *)
        esac
        ;;
    *)
        ;;
esac
