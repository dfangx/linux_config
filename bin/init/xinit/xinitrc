#!/bin/bash

xrdb /home/$(id -un 1000)/.Xresources
autostart="/home/$(id -un 1000)/.local/bin/init/xinit/autostart"
[ -x "$autostart" ] && . "$autostart"

if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

exec $STARTUP dwm
#exec $STARTUP while type dwm >/dev/null; do dwm && continue || break; done
#exec $STARTUP dwm -nb $background -nf $foreground -sb $color1 -sf $color14
#exec $STARTUP /home/cyrusng/bin/init/xinit/startdwm

