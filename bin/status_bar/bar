#!/bin/bash

status_dir="defaultpath"
default_refresh=1;

trap 'vol="$($status_dir/volume)"' SIGRTMIN+1
trap 'backlight="$($status_dir/backlight)"' SIGRTMIN+2

while true
do
    clock="$("$status_dir"/time)"
    bat="$("$status_dir"/battery)"
    network="$("$status_dir"/network wlan0)"
    mem="$("$status_dir"/mem)"

    xsetroot -name " $mem | $network $bat $clock "
    sleep $default_refresh
done
