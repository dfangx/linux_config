#!/bin/sh

interface="$1"
ssid="`iw $interface link | grep "SSID" | cut -f2 -d" "`"
if [ -z "$ssid" ]
then
    #label="\U000f092e"
    label="󰤮"
    ssid="No connection"
else
    quality=$(iw $interface link | grep signal | awk '{ print int(2 * ($2 + 100)) }')
    #quality=$(grep $interface /proc/net/wireless | awk '{ print int($3 * 100 / 70) }')
    color="\x01"

    if [ "$quality" -le 25 ]
    then
        #label="\U000f092f"
        label="󰤯"
    elif [ "$quality" -le 50 ]
    then
        #label="\U000f091f"
        label="󰤟"
    elif [ "$quality" -le 75 ]
    then
        #label="\U000f0922"
        label="󰤢"
    elif [ "$quality" -le 90 ]
    then
        #label="\U000f0925"
        label="󰤥"
    else
        #label="\U000f0928"
        label="󰤨"
    fi
fi

#if ! [ -e "/sys/class/net/${INTERFACE}/operstate" ] || ! [ "`cat /sys/class/net/${INTERFACE}/operstate`" = "up" ]
#then
#        exit 0
#fi

#echo -e " +@fn=1;$label+@fn=0; $ssid"
echo -e "$label $ssid"
